doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title About Us - Tutor Finder
  style.
    /* Set background color for the entire page */
    body {
    background-color: #f0f8ff; /* Light blue background */
    font-family: 'Arial', sans-serif;
    background-image: url('/assets/img/a.jpeg'); /* Background image for entire webpage */
    background-size: cover; /* Ensure the image covers the entire background */
    background-position: center; /* Center the background image */
    background-repeat: no-repeat; /* Prevent the background from repeating */
    margin: 0;
    padding: 80px;
    }
    /* Styling for the About Us section */
    #aboutUsSection {
    padding: 30px;
    border-radius: 15px;
    width: 70%;
    margin: 50px auto;
    text-align: center;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    background-color: white; /* White background for the section */
    }
    #aboutUsSection h1 {
    font-size: 32px;
    color: #333;
    margin-bottom: 20px;
    font-weight: bold;
    }
    #aboutText {
    font-size: 20px;
    color: #444;
    line-height: 1.8;
    margin-bottom: 30px;
    text-align: justify;
    padding: 0 20px;
    }
    #learnMoreBtn {
    padding: 12px 25px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 18px;
    font-weight: bold;
    }
    /* #learnMoreBtn:hover {
    background-color: #0056b3;
    } */
    /* Styling for the navigation */
    /* nav {
    background-color: #007bff;
    padding: 10px;
    } */
    .main-button {
    color: white;
    text-decoration: none;
    font-size: 18px;
    margin: 0 20px;
    }
    .main-button:hover {
    text-decoration: underline;
    }
// Navigation bar
nav
  a.main-button(href='/') Home
// About Us Section
#aboutUsSection
  h1 About Us
  p#aboutText
    | We connect students with top tutors around the world. Our platform allows personalized learning experiences, providing a wide range of subjects for students of all levels.
  button#learnMoreBtn Learn More
// JavaScript for dynamic content change
script.
  document.getElementById("learnMoreBtn").addEventListener("click", function() {
  document.getElementById("aboutText").innerHTML = "Tutor Finder is your go-to platform to find professional tutors in various subjects. We provide personalized tutoring for students of all ages, helping them excel in academics and beyond. Whether you need help with mathematics, science, languages, or test preparation, our expert tutors are here to guide you.";
  });
