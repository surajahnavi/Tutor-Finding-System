doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title ByteXL Login
  style.
    body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-image: url('/asserts/img/i.webp'); /* Replace with your background image URL */
    background-size: cover
    background-position: center;
    background-attachment: fixed;
    }
    header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 20px;
    background-color: white;
    color: #007bff;
    }
    .logo {
    display: flex;
    align-items: center;
    }
    .logo img {
    height: 40px; /* Adjust logo size */
    margin-right: 10px;
    }
    .logo-text {
    font-size: 1.5rem;
    font-weight: bold;
    }
    .nav-links {
    display: flex;
    gap: 20px;
    }
    .nav-links a {
    color: #007bff;
    text-decoration: none;
    font-size: 1rem;
    }
    .nav-links a:hover {
    text-decoration: underline;
    }
    .container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    }
    .login-box {
    width: 400px;
    padding: 40px;
    background-color: rgba(255, 255, 255, 0.9); /* Slight transparency for background */
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    position: relative;
    }
    h2 {
    text-align: center;
    margin-bottom: 20px;
    color: #333;
    }
    .input-group {
    margin-bottom: 15px;
    }
    .input-group label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
    color: #333;
    }
    .input-group input {
    width: 100%;
    padding: 10px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 4px;
    background-color: #f9f9f9;
    }
    .input-group input:focus {
    outline: none;
    border-color: #007bff;
    }
    .forgot-password {
    text-align: right;
    margin-top: 10px;
    margin-bottom: 20px;
    }
    .forgot-password a {
    color: #007bff;
    text-decoration: none;
    }
    .forgot-password a:hover {
    text-decoration: underline;
    }
    .submit-btn {
    width: 100%;
    padding: 10px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 16px;
    cursor: pointer;
    }
    .submit-btn:hover {
    background-color: #0056b3;
    }
    .checkbox {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
    }
    .checkbox input {
    margin-right: 10px;
    }
    .checkbox label {
    color: #333;
    }
    footer {
    text-align: center;
    margin-top: 20px;
    }
    footer a {
    color: #007bff;
    text-decoration: none;
    }
    footer a:hover {
    text-decoration: underline;
    }
    .role-select {
    text-align: center;
    margin-bottom: 20px;
    }
    .role-select label {
    margin: 0 10px;
    font-size: 16px;
    color: #333;
    }
    .role-select input[type="radio"] {
    margin-right: 5px;
    }
    /* Media Query for Mobile Devices */
    @media (max-width: 768px) {
    header {
    flex-direction: column;
    align-items: flex-start;
    }
    .nav-links {
    margin-top: 10px;
    width: 100%;
    justify-content: flex-start;
    }
    .container {
    height: auto;
    padding: 20px;
    }
    .login-box {
    width: 100%;
    padding: 20px;
    box-shadow: none;
    border-radius: 0;
    }
    }
header
  nav
    a.main-button(href='/') Home
  .logo
    img(src='/asserts/img/logos.png' alt='Logo')
    // Replace with your logo image URL
    span.logo-text Tutor Finder
  .nav-links
    a(href='/login') Login
    a(href='/signup') Sign Up
.container
  .login-box
    .role-select
      label
        input#teacherRadio(type='radio' name='role' value='teacher')
        |  As a Teacher
      label
        input#studentRadio(type='radio' name='role' value='student' checked='')
        |  As a Student
    h2#roleTitle Login as Student
    form#loginForm
      .input-group
        label(for='email') Email Address
        input#email(type='email' name='email' placeholder='Enter email address' required='')
      .input-group
        label(for='password') Password
        input#password(type='password' name='password' placeholder='Enter password' required='')
      .forgot-password
        a(href='#') Forgot Password?
      .checkbox
        input#agree(type='checkbox' required='')
        label(for='agree')
          | By continuing to login, you agree to our 
          a(href='#') Privacy Policy
          |  and 
          a(href='#') Terms of Service
          | .
      button.submit-btn(type='submit') Login
footer
  a(href='#') Privacy Policy
  |  | 
  a(href='#') Terms of Service
script.
  const teacherRadio = document.getElementById('teacherRadio');
  const studentRadio = document.getElementById('studentRadio');
  const roleTitle = document.getElementById('roleTitle');
  const loginForm = document.getElementById('loginForm');
  // Add event listeners to toggle between student and teacher
  teacherRadio.addEventListener('change', function() {
  roleTitle.innerText = 'Login as Teacher';
  });
  studentRadio.addEventListener('change', function() {
  roleTitle.innerText = 'Login as Student';
  });
  // Handle form submission
  loginForm.addEventListener('submit', function(event) {
  event.preventDefault(); // Prevent default form submission
  // Redirect based on the selected role
  if (studentRadio.checked) {
  window.location.href = '/user'; // Redirect to student dashboard
  } else {
  window.location.href = '/tutor'; // Redirect to teacher dashboard
  }
  });
