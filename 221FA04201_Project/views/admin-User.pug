    body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f9;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    }
    .header .home-button {
    padding: 10px 20px;
    font-size: 16px;
    color: #ffffff;
    background-color: #4CAF50;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    margin-top: 2px; /* Adjust this value to decrease space */
    }
    .container {
    max-width: 1000px;
    margin: 50px auto;
    background-color: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    flex-grow: 1;
    }
    h1 {
    text-align: center;
    color: #4C007D;
    margin-bottom: 30px;
    }
    .user-list {
    border-collapse: collapse;
    width: 100%;
    margin-bottom: 20px;
    }
    .user-list th, .user-list td {
    border: 1px solid #ccc;
    padding: 10px;
    text-align: left;
    }
    .user-list th {
    background-color: #4C007D;
    color: white;
    }
    .user-list td {
    background-color: #f9f9f9;
    }
    .user-list td:last-child {
    text-align: center;
    }
    .view-btn {
    background-color: #007BFF;
    color: white;
    border: none;
    padding: 8px 15px;
    border-radius: 5px;
    cursor: pointer;
    }
    .view-btn:hover {
    background-color: #0056b3;
    }
    .status-btn {
    background-color: #28A745;
    color: white;
    border: none;
    padding: 8px 15px;
    border-radius: 5px;
    cursor: pointer;
    }
    .status-btn.inactive {
    background-color: #FF6F61;
    }
    .status-btn:hover {
    opacity: 0.9;
    }
    .note {
    font-size: 12px;
    color: #666;
    margin-top: 10px;
    }
    /* Footer styles */
    footer {
    background-color: #4C007D;
    color: white;
    text-align: center;
    padding: 20px 0;
    margin-top: auto;
    }
    footer p {
    margin: 5px 0;
    font-size: 14px;
    }
    footer a {
    color: #FFAF00;
    text-decoration: none;
    }
    footer a:hover {
    text-decoration: underline;
    }
