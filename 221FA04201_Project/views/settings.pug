script.
  document.getElementById('account-form').addEventListener('submit', function(event) {
  event.preventDefault();
  // Handle Account form submission
  saveChanges();
  });
  document.getElementById('notifications-form').addEventListener('submit', function(event) {
  event.preventDefault();
  // Handle Notifications form submission
  saveChanges();
  });
  document.getElementById('privacy-form').addEventListener('submit', function(event) {
  event.preventDefault();
  // Handle Privacy form submission
  saveChanges();
  });
  function saveChanges() {
  // Perform validation and saving logic
  const messageBox = document.getElementById('message');
  messageBox.style.display = 'block';
  setTimeout(function() {
  messageBox.style.display = 'none';
  }, 3000);
  }
  // Image preview functionality for profile picture upload
  document.getElementById('profile-picture').addEventListener('change', function(event) {
  const file = event.target.files[0];
  if (file) {
  const reader = new FileReader();
  reader.onload = function(e) {
  document.getElementById('profile-pic-preview').src = e.target.result;
  };
  reader.readAsDataURL(file);
  }
  });
