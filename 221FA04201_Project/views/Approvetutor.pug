script.
  // Approve and Reject button functionality
  document.querySelectorAll('.approve-btn').forEach(button => {
  button.addEventListener('click', function() {
  // Change to approved style
  this.textContent = 'Approved';
  this.classList.add('approved');
  this.setAttribute('disabled', true); // Disable the approve button
  this.nextElementSibling.classList.remove('reject-btn'); // Change the reject button style
  this.nextElementSibling.classList.add('rejected');
  this.nextElementSibling.textContent = 'Reject'; // Keep reject button active
  });
  });
  document.querySelectorAll('.reject-btn').forEach(button => {
  button.addEventListener('click', function() {
  // Change to rejected style
  this.textContent = 'Rejected';
  this.classList.add('rejected');
  this.setAttribute('disabled', true); // Disable the reject button
  this.previousElementSibling.classList.remove('approve-btn'); // Change the approve button style
  this.previousElementSibling.classList.add('approved');
  this.previousElementSibling.textContent = 'Approve'; // Keep approve button active
  // Change the approve button style to a lighter shade
  this.previousElementSibling.style.backgroundColor = '#A0D3A0'; // Lighter green
  this.previousElementSibling.style.color = '#fff'; // Keep text white
  });
  });
