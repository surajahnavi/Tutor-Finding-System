doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Admin - Approve Tutors
  style.
    body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f9;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    background-image: url('/asserts/img/r.png');
    min-height: 100vh;
    }
    header {
    background-color: #4C007D;
    color: white;
    padding: 15px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    }
    header .logo {
    display: flex;
    align-items: center;
    }
    header .logo img {
    height: 40px;
    margin-right: 10px;
    }
    .container {
    max-width: 1000px;
    margin: 50px auto;
    background-color: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    flex-grow: 1;
    }
    h1 {
    text-align: center;
    color: #4C007D;
    margin-bottom: 30px;
    }
    .tutor-list {
    border-collapse: collapse;
    width: 100%;
    margin-bottom: 20px;
    }
    .tutor-list th, .tutor-list td {
    border: 1px solid #ccc;
    padding: 10px;
    text-align: left;
    }
    .tutor-list th {
    background-color: #4C007D;
    color: white;
    }
    .tutor-list td {
    background-color: #f9f9f9;
    }
    .tutor-list td:last-child {
    text-align: center;
    }
    .approve-btn {
    background-color: #28A745;
    color: white;
    border: none;
    padding: 8px 15px;
    border-radius: 5px;
    cursor: pointer;
    margin-right: 5px;
    }
    .approve-btn:hover {
    background-color: #218838;
    }
    .reject-btn {
    background-color: #FF6F61;
    color: white;
    border: none;
    padding: 8px 15px;
    border-radius: 5px;
    cursor: pointer;
    }
    .reject-btn:hover {
    background-color: #d9534f;
    }
    .approved {
    background-color: #218838 !important; /* Dark green for approved */
    }
    .rejected {
    background-color: #d9534f !important; /* Dark red for rejected */
    }
    .note {
    font-size: 12px;
    color: #666;
    margin-top: 10px;
    }
    /* Footer styles */
    footer {
    background-color: #4C007D;
    color: white;
    text-align: center;
    padding: 20px 0;
    margin-top: auto;
    }
    footer p {
    margin: 5px 0;
    font-size: 14px;
    }
    footer a {
    color: #FFAF00;
    text-decoration: none;
    }
    footer a:hover {
    text-decoration: underline;
    }
